@model BoardView
@{
    ViewData["Title"] = "Board View";
}

<div class="container">
	<div class="row">
		<h2>@Model.Title</h2>
	</div>
    @if (Model.Columns.Count > 0)
    {
        <a asp-action="AddCard" asp-controller="Board" asp-route-id="@Model.Id" class="waves-effect waves-light btn">
        Add Card
        </a>
    }
	<div class="row">
        @foreach (var column in Model.Columns)
        {
            <div class="col m2">
                <h3>@column.Title</h3>

                @foreach (var card in column.Cards)
                {
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <!-- change this bit (to add the link)-->
                            <p>
                                <a asp-controller="Card" asp-action="Details"
                                    asp-route-id="@card.Id" class="white-text">
                                    @card.Content
                                </a> 
                            </p>
                        <!-- -->
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
