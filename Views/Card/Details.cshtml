@model CardDetails
@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <h2>Details</h2>
    <div class="row">
        <form class="col s12" asp-controller="Card" asp-action="Update">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Card contents"
                           asp-for="Contents" />
                    <label asp-for="Contents">Contents</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea placeholder="Notes"
                              asp-for="Notes"
                              class="materialize-textarea"></textarea>
                    <label asp-for="Notes">Notes</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <select asp-for="selectedColumnId" asp-items="Model.Columns"></select>
                    <label asp-for="selectedColumnId">Column</label>
                </div>
            </div>
            <div class="row">
                <input asp-for="Id" type="hidden" />
                <input type="submit" value="Save" class="btn" />
                @TempData["Message"]
            </div>
        </form>
    </div>
</div>

<!--Easily fixed if we add the relevant Materialize code at the bottom of our View.
Try it now and we should have a dropdown list of columns... -->
<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);
    });
</script>